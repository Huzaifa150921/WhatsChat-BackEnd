datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  username    String  @unique
  displayName String
  password    String
  online      Boolean @default(false)
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  from      String
  to        String
  text      String
  status    String   @default("sent")
  createdAt DateTime @default(now())
}
