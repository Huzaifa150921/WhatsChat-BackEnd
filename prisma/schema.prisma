datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  username    String @unique
  displayName String
  password    String
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  from      String
  to        String
  text      String
  createdAt DateTime @default(now())
}
